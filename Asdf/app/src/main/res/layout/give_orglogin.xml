<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name of Organization"
        android:ems="10"
        android:id="@+id/orgInputLabel"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_below="@+id/nameInputField"
        android:layout_alignLeft="@+id/orgInputLabel"
        android:layout_alignStart="@+id/orgInputLabel"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:backgroundTint="@android:color/holo_blue_light"
        android:hint="Organization Email"
        android:layout_marginTop="43dp"
        android:layout_alignTop="@+id/editText5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Event Name"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/eventNameLabel"
        android:layout_below="@+id/emailInput"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/eventNameInput"
        android:hint="Name of Event"
        android:layout_below="@+id/eventNameLabel"
        android:layout_alignLeft="@+id/emailInput"
        android:layout_alignStart="@+id/emailInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Description of Event"
        android:ems="10"
        android:layout_below="@+id/eventNameInput"
        android:layout_alignRight="@+id/eventNameLabel"
        android:layout_alignEnd="@+id/eventNameLabel"
        android:layout_marginTop="15dp"
        android:id="@+id/eventDescriptionLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText10"
        android:hint="Event Description"
        android:layout_below="@+id/eventDescriptionLabel"
        android:layout_alignLeft="@+id/eventNameInput"
        android:layout_alignStart="@+id/eventNameInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameInputField"
        android:backgroundTint="@android:color/holo_blue_light"
        android:hint="Club/Group Name"
        android:layout_below="@+id/orgInputLabel"
        android:layout_alignLeft="@+id/emailInput"
        android:layout_alignStart="@+id/emailInput" />

</RelativeLayout>