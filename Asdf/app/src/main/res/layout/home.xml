<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/startbg"
        android:background="@drawable/startbg"
        android:scaleType="fitXY" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give"
        android:id="@+id/give"
        android:layout_alignTop="@+id/request"
        android:layout_toLeftOf="@+id/request"
        android:layout_toStartOf="@+id/request"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:id="@+id/request"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/upperline"
        android:layout_toEndOf="@+id/upperline"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:id="@+id/upperline"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="350dp"
        android:id="@+id/bottomline"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_above="@+id/bottomline"
        android:layout_centerHorizontal="true" />
</RelativeLayout>