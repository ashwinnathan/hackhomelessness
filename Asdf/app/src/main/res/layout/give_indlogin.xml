<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/nameLabel"
        android:layout_centerHorizontal="true"
        android:id="@+id/nameInput"
        android:hint="Full Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:id="@+id/nameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Phone Number"
        android:ems="10"
        android:layout_below="@+id/nameInput"
        android:layout_alignLeft="@+id/nameLabel"
        android:layout_alignStart="@+id/nameLabel"
        android:layout_marginTop="23dp"
        android:id="@+id/phoneNumLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumInput"
        android:layout_below="@+id/phoneNumLabel"
        android:layout_alignLeft="@+id/nameInput"
        android:layout_alignStart="@+id/nameInput"
        android:hint="(###)###-####" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email (optional)"
        android:ems="10"
        android:id="@+id/emailLabel"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/phoneNumLabel"
        android:layout_alignStart="@+id/phoneNumLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/emailLabel"
        android:layout_alignRight="@+id/phoneNumInput"
        android:layout_alignEnd="@+id/phoneNumInput"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:id="@+id/emailInput"
        android:hint="Email" />

    <Button
        android:text="Submit Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signupButton"
        android:layout_below="@+id/emailInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:backgroundTint="?attr/colorPrimary"
        android:background="?attr/colorPrimary"
        android:textColor="@color/white" />

</RelativeLayout>